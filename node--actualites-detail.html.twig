<div class="actualites-detail">
    <div class="upper-section container">
        {% if node.field_banner_title.value is not empty %}
            <h1>{{ node.field_banner_title.value }}</h1>
        {% endif %}
        {% if node.field_thumbnail_image.entity.field_media_image.0.entity.uri.value is not empty %}
            <div class="actualites-img">
                {% set actualites_img = {
                    '#theme': 'responsive_image',
                    '#responsive_image_style_id': 'actualites_detail_image_style',
                    '#uri':        node.field_thumbnail_image.entity.field_media_image.0.entity.uri.value,
                    '#attributes': { class:'' }
                } %}
                {{ actualites_img }}
            </div>
        {% endif %}
        {% if node.field_category_acheter_louer is not empty %}
            {{ node.field_category_acheter_louer.entity.name.value }}
        {% endif %}
        {% if node.field_date.value is not empty %}
            {{ node.field_date.value|date('d M Y')}}
        {% endif %}
        {% if node.field_banner_title_2.value is not empty %}
            <h2>{{ node.field_banner_title_2.value }}</h2>
        {% endif %}
        {% if node.field_text_1.value is not empty %}
            <div class="text-1">{{ node.field_text_1.value|raw }}</div>
        {% endif %}
        {% if node.field_text_2.value is not empty %}
            <div class="text-2">{{ node.field_text_2.value|raw }}</div>
        {% endif %}
    </div>
    {% if node.field_slider_images or node.field_slider_title.value is not empty %}
        <div class="detail-slider-1">
            <h3>{{ node.field_slider_title.value }}</h3>
            <!-- Slick Carousel Container -->
            <div class="slick-carousel">
                {% for key, item in node.field_slider_images %}
                    {% if item.entity.field_media_image.0.entity.uri.value is not empty %}
                        <div class="slide-img">
                            {% set actualites_img = {
                                '#theme': 'responsive_image',
                                '#responsive_image_style_id': 'actualites_detail_slider_1',
                                '#uri':        item.entity.field_media_image.0.entity.uri.value,
                                '#attributes': { class:'' }
                            } %}
                            {{ actualites_img }}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
    {% if node.field_text_3.value or node.field_actualites_video.entity.field_media_video_file.0.entity.uri.value is not empty %}
        <div class="text-video">
            {{ node.field_text_3.value|raw }}
            <video width="1290" height="752" controls>
            <source src="{{ file_url(node.field_actualites_video.entity.field_media_video_file.0.entity.uri.value) }}" type="video/mp4">
            </video>
        </div>
    {% endif %}
</div>
{{ drupal_entity('block_content',2) }}
{{ drupal_view('actualites_detail_slider', 'block_1') }}