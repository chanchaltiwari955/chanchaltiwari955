<div class="actualites-listing">
    <h1 class="text-center">{{ node.field_actualites_title.value }}</h1>
    {% if node.field_thumbnail_image.entity.field_media_image.0.entity.uri.value is not empty %}
        <div class="actualites-img">
            {% set actualites_img = {
                '#theme': 'responsive_image',
                '#responsive_image_style_id': 'actualites_image_style',
                '#uri':        node.field_thumbnail_image.entity.field_media_image.0.entity.uri.value,
                '#attributes': { class:'' }
            } %}
            {{ actualites_img }}
        </div>
    {% endif %}
    {% if node.field_actualites_title_1.value or node.field_date.value or node.field_short_description.value is not empty %}
        <div class="banner-des">
            <h2>{{ node.field_actualites_title_1.value }}</h2>
            {{ node.field_date.value|date('d M Y')}}
            {{ node.field_short_description.value|raw }}
        </div>
    {% endif %}
</div>